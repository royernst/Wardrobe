@model Wardrobe.Models.Shoe

@{
    ViewBag.Title = "Add New Shoes";
}

<h2 style="color: white">Add New Shoes</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ShoeName, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
