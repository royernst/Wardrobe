                @Html.EditorFor(model => model.ShoePicture, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShoePicture, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShoeColor, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShoeColor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShoeColor, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Kept this as a fillable text box to customize poss. multiple season or all/any*@
        <div class="form-group">
            @Html.LabelFor(model => model.ShoeSeason, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShoeSeason, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShoeSeason, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShoeOccasion, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShoeOccasion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShoeOccasion, "", new { @class = "text-danger" })
            </div>
        </div>

