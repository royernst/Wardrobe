@model Wardrobe.Models.Top

@{
    ViewBag.Title = "Add a New Top";
}

<h2 style="color:white">Add a New Top</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TopName, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TopName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TopPhoto, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TopPhoto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopPhoto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TopColor, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TopColor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopColor, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Kept this as a fillable text box to customize poss. multiple season or all/any*@
        <div class="form-group">
            @Html.LabelFor(model => model.TopSeason, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TopSeason, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopSeason, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TopOccasion, htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TopOccasion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopOccasion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypeID, "Type of Clothing", htmlAttributes: new { @class = "control-label col-md-2", style = "color: white" })
            <div class="col-md-10">
                @Html.DropDownList("TypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
